                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/id_campaigner_mainpage_list_item_textll_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
