                        android:layout_height="30dip"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/id_campaigner_mainpage_list_item_textll_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="愤怒的小鸟"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/id_campaigner_mainpage_list_item_textll_schoolll_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/dingwei" />

                    <TextView
                        android:id="@+id/id_campaigner_mainpage_list_item_textll_schoolll_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="科大西区"
                        android:textSize="12sp" />

