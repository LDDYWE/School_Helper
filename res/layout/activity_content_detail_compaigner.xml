                        android:textColor="@color/gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_campaigner_mainpage_list_item_textll_placell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/id_campaigner_mainpage_list_item_textll_placename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地点"
                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/id_campaigner_mainpage_list_item_textll_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="五彩城"
                        android:textColor="@color/gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/id_campaigner_mainpage_list_item_textll_detailname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="详情"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/id_campaigner_mainpage_list_item_textll_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="厚度手段手段是好的哈死哦的还是很嗲是海淀上地哈斯的哈死哦好嗲沙嗲时都会的话说对啊说对的哈苏护的挥洒盾话说对岸是对爱很速度哈岁的哈随后对岸手段和速度哈话岁的哈和"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/id_detail_content_temporarycampaigner_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#292929"
        android:orientation="horizontal" >
        
        <LinearLayout 
            android:id="@+id/id_detail_content_temporary_campaigner_linearlayout_message_ll"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/selector_message_report_btn">
            
            <ImageView android:id="@+id/id_detail_content_temporary_campaigner_linearlayout_message_ll_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chat_icon"/>
            
            <TextView 
                android:id="@+id/id_detail_content_temporary_campaigner_linearlayout_message_ll_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发消息"
                android:layout_marginLeft="10dp"
                android:textColor="#878787"
                android:textSize="18sp"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/id_detail_content_temporary_campaigner_linearlayout_report_ll"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/selector_message_report_btn">
            
            <ImageView android:id="@+id/id_detail_content_temporary_campaigner_linearlayout_report_ll_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/report_icon"/>
            
            <TextView 
                android:id="@+id/id_detail_content_temporary_campaigner_linearlayout_report_ll_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报"
                android:layout_marginLeft="10dp"
                android:textColor="#878787"
                android:textSize="18sp"/>
        </LinearLayout>

