<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/momo"
    android:orientation="vertical" >

    <com.zb.secondary_market.custom.TitleView
        android:id="@+id/id_other_released_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/id_other_released_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/id_other_released_scroll_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/id_other_released_info_ll"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/personal_setting_background1"
                android:gravity="center"
                android:orientation="vertical" >

                <com.zb.secondary_market.custom.CircularImageView
                    android:id="@+id/id_other_released_info_ll_photo"
                    android:layout_width="70dip"
                    android:layout_height="70dip" />

                <LinearLayout
                    android:id="@+id/id_other_released_info_ll_ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <!-- <TextView
                        android:id="@+id/id_other_released_info_ll_ll1_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="LDDYWE"
                        android:textColor="@color/white"
                        android:textSize="16sp" /> -->

                    <TextView
                        android:id="@+id/id_other_released_info_ll_ll1_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="123456"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/id_other_released_info_ll_ll1_gps_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/id_other_released_info_ll_ll1_gps_ll_icon"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/dingwei" />

                        <TextView
                            android:id="@+id/id_other_released_info_ll_ll1_gps_school"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:text="123456"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/id_other_released_info_ll_ll1_message_btn"
                        android:layout_marginTop="10dp"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/corner_shape111111"
                        android:padding="2dp"
                        android:text="私信"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            
            <FrameLayout
                android:id="@+id/id_other_released_fl"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >
            </FrameLayout>
           
            <!-- <GridView
                android:id="@+id/id_other_released_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="2"
                android:scrollbars="none"
                android:stretchMode="columnWidth" >

            </GridView> -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>