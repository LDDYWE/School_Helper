<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_livefragement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.zb.secondary_market.custom.TitleView
        android:id="@+id/pull_recruit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView 
        android:id="@+id/pull_null_text_recruit"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:textColor="@color/orange"
	      android:textSize="20sp"
	      android:layout_below="@+id/pull_recruit_title"
	      android:gravity="center"
	      android:text="暂无数据，请稍后再试 ^_^"
	      android:visibility="gone"/>
    
    <com.zb.secondary_market.pulltorefresh.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res/com.zb.secondary_market.pulltorefresh"
        android:id="@+id/pull_refresh_list_recruit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pull_recruit_title"
        android:gravity="center"
        android:scrollbars="none" />

</RelativeLayout>