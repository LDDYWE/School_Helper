<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey" >
    
    <LinearLayout 
        android:id="@+id/id_type_detail_top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_icon_background"
        android:clickable="true"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/id_type_detail_top_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/arrow_left_normal"
            android:text="返回"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        
        <EditText 
            android:id="@+id/id_type_detail_top_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_margin="10dp"
            android:hint="请输入搜索关键字"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/id_type_detail_selector_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/menu_icon_background"
        android:orientation="horizontal">
        
        <View 
            android:id="@+id/id_type_detail_view1"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#ffffff"
            />
        
        <Button 
            android:id="@+id/id_type_detail_button_variety"
            android:layout_width="0dip"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:background="@drawable/selector_assortment_variety_button"
            android:text="综合"
            android:textSize="15sp"/>
        
        <View 
            android:id="@+id/id_type_detail_view2"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#ffffff"
            />
        
        <Button 
            android:id="@+id/id_type_detail_button_credit"
            android:layout_width="0dip"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:text="信用"
            android:textSize="15sp"/>
        
        <View 
            android:id="@+id/id_type_detail_view3"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#ffffff"
            />
        
        <Button 
            android:id="@+id/id_type_detail_button_price"
            android:layout_width="0dip"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:text="价格"
            android:textSize="15sp"/>
        
        <View 
            android:id="@+id/id_type_detail_view4"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#ffffff"
            />
        
        <Button 
            android:id="@+id/id_type_detail_button_redu"
            android:layout_width="0dip"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:text="热度"
            android:textSize="15sp"/>
        
        <View 
            android:id="@+id/id_type_detail_view5"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#ffffff"
            />
        
    </LinearLayout>
    
    <FrameLayout 
        android:id="@+id/id_type_detail_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#ffffff"></FrameLayout>

</LinearLayout>
