<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDDDDDD"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_ll_content_list_secondary_me_released"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="5sp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:background="#FFFFFFFF"
        android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/id_fragment_assortment_variety_listview_item_image_secondary_me_released"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/aa" />

    <LinearLayout
        android:id="@+id/id_fragment_assortment_variety_listview_item_ll_secondary_me_released"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_fragment_assortment_variety_listview_item_ll_title_secondary_me_released"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:text="iphone5"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_fragment_assortment_variety_listview_item_ll_info_secondary_me_released"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="14级自动化 SA"
            android:textColor="@color/grey"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/id_fragment_assortment_variety_listview_item_ll_ll_secondary_me_released"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_fragment_assortment_variety_listview_item_ll_ll_place_secondary_me_released"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="科大西区"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/id_fragment_assortment_variety_listview_item_ll_ll_price_secondary_me_released"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="$10"
                android:textColor="@color/red"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>