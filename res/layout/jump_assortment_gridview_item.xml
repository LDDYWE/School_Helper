<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_jump_assortment_item_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secondary_bg"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_jump_assortment_item_ll_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/id_jump_assortment_item_ll_ll_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/id_jump_assortment_item_ll_ll_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二手市场"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/white"/>
       </LinearLayout>

</LinearLayout>