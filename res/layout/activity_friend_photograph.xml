<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <com.zb.secondary_market.custom.TitleView
        android:id="@+id/friend_photograph_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/id_friend_photograph_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_below="@id/friend_photograph_title"
        android:layout_above="@+id/id_friend_photograph_scrollview_submmit_btn">

        <LinearLayout
            android:id="@+id/id_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/id_friend_photograph_scrollview_ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#CCCCCC"
                android:orientation="vertical" >

                <GridView
                    android:id="@+id/id_friend_photograph_scrollview_ll1_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="3dp"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:layout_margin="2dp"
                    android:verticalSpacing="5dp" >
                </GridView>
            </LinearLayout>

            <View
                android:id="@+id/id_friend_photograph_scrollview_line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:id="@+id/id_friend_photograph_scrollview_ll2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/id_friend_photograph_scrollview_ll2_titleName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="标题"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/id_friend_photograph_scrollview_ll2_title"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="信息标题，最多40个字"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:id="@+id/id_friend_photograph_scrollview_line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:id="@+id/id_friend_photograph_scrollview_ll3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/id_friend_photograph_scrollview_ll3_titleName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="性别"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/id_friend_photograph_scrollview_ll3_spinner_gender"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:entries="@array/gender_type"
                    android:gravity="center"
                    android:prompt="@string/spin_prompt_gendertype" />
            </LinearLayout>
            
