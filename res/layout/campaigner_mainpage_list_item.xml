<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/momo"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/corner_shape1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/id_ll_content_list_campaigner_mainpage_title_ll"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/id_ll_content_list_campaigner_mainpage_title_ll_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="被追捕的旅客-独立风borges（博尔赫斯乐队）"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_ll_content_list_campaigner_mainpage_content_ll"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="8"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/id_ll_content_list_campaigner_mainpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:background="#FFFFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/id_fragment_assortment_variety_listview_item_image_campaigner_mainpage"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:scaleType="fitXY"
                    android:src="@drawable/aa" />

                <LinearLayout
                    android:id="@+id/id_fragment_assortment_variety_listview_item_ll_campaigner_mainpage"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/id_fragment_assortment_variety_listview_item_ll_nickname_campaigner_mainpage"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="昵称"
                        android:textColor="@color/grey"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:id="@+id/id_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/id_fragment_assortment_variety_listview_item_ll_type_campaigner_mainpage_type_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/type" />

                        <TextView
                            android:id="@+id/id_fragment_assortment_variety_listview_item_ll_type_campaigner_mainpage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginLeft="3dp"
                            android:text="类型"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/id_fragment_assortment_variety_listview_item_ll_detail_campaigner_mainpage"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="详情"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/id_fragment_assortment_variety_listview_item_ll_ll_campaigner_mainpage"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/id_fragment_assortment_variety_listview_item_ll_ll_place_campaigner_mainpage"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="科大西区"
                            android:textColor="@color/grey"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/id_fragment_assortment_variety_listview_item_ll_ll_datetime_campaigner_mainpage"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="$10"
                            android:textColor="@color/grey"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>