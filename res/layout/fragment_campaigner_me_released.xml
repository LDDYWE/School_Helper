<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_livefragement"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView 
        android:id="@+id/pull_null_text_campaigner_me_released"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:textColor="@color/refresh_color"
	      android:textSize="20sp"
	      android:layout_below="@+id/pull_campaigner_me_released_title"
	      android:gravity="center"
	      android:text="@string/me_no_released"
	      android:visibility="gone"/>
    
    <com.zb.secondary_market.pulltorefresh.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res/com.zb.secondary_market.pulltorefresh"
        android:id="@+id/pull_refresh_list_campaigner_me_released"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pull_campaigner_me_released_title"
        android:gravity="center"
        android:divider="@null" 
        android:scrollbars="none" />

</RelativeLayout>