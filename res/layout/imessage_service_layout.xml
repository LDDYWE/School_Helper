<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/id_imessage_service_layout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/id_imessage_service_layout_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="8"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/id_imessage_service_layout_ll_rl"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_marginTop="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/id_imessage_service_layout_ll_rl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="科大助手"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/id_imessage_service_layout_ll_rl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="21:45"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/id_imessage_service_layout_ll_ll"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/id_imessage_service_layout_ll_ll_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="你有一条新私信："
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>