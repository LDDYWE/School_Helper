<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jonny="http://schemas.android.com/apk/res/com.zb.secondary_market"
    android:id="@+id/mainrelativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.zb.secondary_market.custom.TitleView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/id_main_mainframelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/id_main_mainframelayout2"
        android:layout_below="@id/main_title" />

    <Button
        android:id="@+id/id_release_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_special_disease_circle"
        android:text="@string/release"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:textSize="18dp" />

    <FrameLayout
        android:id="@+id/id_main_mainframelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:background="@color/zhihu_title" >
        
        <!-- android:background="@drawable/tactile_black_title" -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal" >

            <FrameLayout
                android:id="@+id/layout_recruit_temperary_work"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/image_recruit_temperary_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@drawable/tab_mainpage_image" />

                <TextView
                    android:id="@+id/text_recruit_temperary_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="招聘"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_intern_temperary_work"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/image_intern_temperary_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@drawable/tab_assortment_image" />

                <TextView
                    android:id="@+id/text_intern_temperary_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="实习"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_parttime_temperary_work"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/image_parttime_temperary_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@drawable/tab_discover_image" />

                <TextView
                    android:id="@+id/text_parttime_temperary_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="兼职"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </FrameLayout>

            <!--
            <FrameLayout
                android:id="@+id/layout_me_temperary_work"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/image_me_temperary_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@drawable/tab_me_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="我的"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </FrameLayout>
            -->
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>